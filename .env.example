# Gateway
GATEWAY_PORT=8080

# Auth Service
AUTH_SERVICE_PORT=8081
AUTH_SERVICE_HOST=auth-service

# Posts Service
POSTS_SERVICE_PORT=8082
POSTS_SERVICE_HOST=posts-service

# Files Service
FILES_SERVICE_PORT=8084
FILES_SERVICE_HOST=files-service

# MinIO Storage
S3_ENDPOINT=minio:9000
S3_PUBLIC_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=uploads
S3_USE_SSL=false
# Like Service
LIKES_SERVICE_PORT=8083
LIKES_SERVICE_HOST=likes-service

# Consul
CONSUL_HTTP_ADDR=consul:8500
CONSUL_HTTP_TOKEN=your-consul-acl-token-here

# Redis
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# Session
SESSION_SECRET=change-this-to-a-random-secret-key-in-production
SESSION_MAX_AGE=3600

# Logging
# LOG_LEVEL options: debug, info, warn, error (default: info)
LOG_LEVEL=info
# LOG_FORMAT options: json, text (default: json)
# Use "text" for local development, "json" for production
LOG_FORMAT=json

# App Config (legacy)
PORT=8082
APP_ENV=local

# Database
DB_HOST=psql_bp
DB_PORT=5432
DB_DATABASE=blueprint
DB_USERNAME=melkey
DB_PASSWORD=password1234
DB_SCHEMA=public

# SMTP Email Configuration (for passwordless auth codes)
# Options: "log" (dev mode - print to console) or "smtp" (production - send emails)
EMAIL_MODE=log

# SMTP Settings (only needed when EMAIL_MODE=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com
SMTP_FROM_NAME=Your App Name
